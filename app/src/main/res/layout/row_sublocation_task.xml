<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_tops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10dp">


        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Washroom"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/txt_name"
            android:text="Washroom"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_toLeftOf="@+id/txt_viewtasks"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/text_12"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/rel_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_desc"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_toLeftOf="@+id/txt_viewtasks"
            android:layout_marginTop="@dimen/margin_5dp">


            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_status"
                android:text="Pending"
                android:maxLines="2"

                android:textColor="@color/color_gray"
                android:textSize="@dimen/text_12"
                android:textStyle="normal" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_viewtasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rect_working"
            android:padding="@dimen/margin_5dp"
            android:text="WORKING"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_10"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
