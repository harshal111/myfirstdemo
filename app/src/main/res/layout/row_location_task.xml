<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_tops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10dp">

        <ImageView
            android:id="@+id/img_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_5dp"
            android:src="@drawable/view" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Washroom"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginTop="@dimen/margin_5dp"
            android:text="Washroom"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/text_12"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/rel_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_desc"

            android:layout_marginTop="@dimen/margin_5dp">

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ring_pending" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_toRightOf="@+id/img_status"
                android:text="Pending"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/text_12"
                android:textStyle="normal" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_viewtasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_link"
            android:text="VIEW TASK"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/text_12"
            android:textStyle="normal" />
    </RelativeLayout>
</RelativeLayout>
