<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <include layout="@layout/toolbar_detial" />

    <ScrollView
        android:id="@+id/scl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/rel_tops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:text=""
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_sname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:text=""
                android:textSize="@dimen/text_13"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_manager_assign_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_sname"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/color_gray"
                android:padding="@dimen/margin_5dp"
                android:text="Manager assign time"

                android:textColor="@android:color/white"
                android:textSize="@dimen/text_15"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_manager_assign_time"
                android:layout_margin="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="Assign Date:"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/txt_massign_date_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="60"
                    android:text=""
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_msdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_0"
                android:layout_margin="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="Start Time:"

                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/txt_msdate_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="60"
                    android:text=""
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_medate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_msdate"
                android:layout_margin="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="End Time:"

                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/txt_medate_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:text=""

                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_employee_assign_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_medate"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/color_gray"
                android:padding="@dimen/margin_5dp"
                android:text="Employee assign time"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_15"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_employee_assign_time"
                android:layout_margin="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="Assign Date:"

                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/txt_assign_emp_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="60"
                    android:text=""
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_esdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_1"
                android:layout_margin="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="Start Time:"

                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/txt_emsdate_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="60"
                    android:text=""
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_eedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_esdate"
                android:layout_margin="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="End Time:"

                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/txt_emedate_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="60"
                    android:text=""
                    android:textSize="@dimen/text_13" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
